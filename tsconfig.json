{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./pkg",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "./pkg/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "_cmd",
    "~tailwind.config.ts",
    "~vite.config.ts"
  ]
}