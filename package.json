{
	"name": "@templwind/templwind",
	"private": false,
	"version": "0.0.7",
	"type": "module",
	"description": "A Tailwind CSS plugin for GoLang templwind components",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:css": "npx tailwindcss -i ./pkg/styles/templwind.scss -o ./dist/templwind.css --minify",
		"build:ts": "tsc",
		"build": "pnpm build:css && pnpm build:ts"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/templwind/templwind.git"
	},
	"keywords": [
		"tailwindcss",
		"templwind",
		"templ",
		"templ.guide",
		"plugin",
		"components",
		"golang"
	],
	"author": "Alma Tuck <833950+localrivet@users.noreply.github.com>",
	"license": "MIT",
	"dependencies": {
		"autoprefixer": "^10.4.19",
		"postcss": "^8.4.39",
		"sass": "^1.77.8",
		"tailwindcss": "^3.4.6"
	},
	"devDependencies": {
		"@types/node": "^20.14.12",
		"typescript": "^5.5.4"
	}
}